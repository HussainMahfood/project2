<h1> Add Quote </h1>

<form method="POST" action="/quote/add">

    <div class="form-group">
        <label>Quote ID</label>
        <input type="text" name="quoteId" class="form-control">
    </div>

    <div class="form-group">
        <label>Quote Value</label>
        <input type="number" name="quoteValue" class="form-control">
    </div>

    <div class="form-group">
        <label>Quote Date</label>
        <input type="date" name="quoteDate" class="form-control">
    </div>

    <div class="form-group">
        <label>Insurance Type</label>
        <input type="text" name="insuranceType" class="form-control">
    </div>


    <div class="form-group">
        <label>Car</label>
        <select name="car[]" multiple="multiple" class="form-control">
            <% cars.forEach (function (car) { %>

                <option value="<%= car._id %>"> <%= car.name %> </option>

            <% }) %>
        </select>
    </div>

    <div class="form-group">
        <label>User</label>
        <select name="user[]" multiple="multiple" class="form-control">
            <% users.forEach (function (user) { %>

                <option value="<%= user._id %>"> <%= user.name %> </option>

            <% }) %>
        </select>
    </div>

    <br>
    
    <button type="submit" class="btn btn-primary">Create Quote</button>

</form>